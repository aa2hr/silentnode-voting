{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": [
      "node",
      "hardhat",
      "@nomicfoundation/hardhat-toolbox"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./deploy",
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./typechain-types",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
